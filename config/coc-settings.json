{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "typescriptreact"
  ],
  "codeLens.enable": false,
  "diagnostic-languageserver.filetypes": {
    "css": "stylelint",
    "javascript": "stylelint"
  },
  "diagnostic-languageserver.linters": {
    "stylelint": {
      "command": "/usr/local/lib/node_modules/stylelint",
      "rootPatterns": [
        ".git"
      ],
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "--formatter",
        "unix",
        "--stdin-filename",
        "%filename"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "stylelint",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s(.+)\\s\\[(\\w+)\\]$",
        {
          "line": 1,
          "column": 2,
          "message": 3,
          "security": 4
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning"
      }
    }
  }
}
