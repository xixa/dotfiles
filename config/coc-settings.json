{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "sass",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "elixir",
    "graphql"
  ],
  "codeLens.enable": false,
  "languageserver": {
    "haskell": {
      "command" : "ghcide",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  }
}
